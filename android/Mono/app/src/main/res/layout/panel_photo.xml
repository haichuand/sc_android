<?xml version="1.0" encoding="utf-8"?>
<com.mono.util.SimpleLabelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photos_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:label="@string/photos"
    app:labelColor="?attr/colorPrimary"
    app:labelSize="14sp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <com.mono.util.SimpleLabelLayout
        android:id="@+id/photo_suggestions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        app:label="@string/suggestions"
        app:labelColor="?attr/colorPrimary"
        app:labelSize="14sp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/photo_suggestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
    </com.mono.util.SimpleLabelLayout>
</com.mono.util.SimpleLabelLayout>
