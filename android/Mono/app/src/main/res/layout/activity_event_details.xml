<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.mono.util.SimpleLabelLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/title"
                app:labelColor="@color/colorPrimary"
                app:labelSize="14sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input"
                        android:hint="@string/title"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/color_picker"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/circle"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
            </com.mono.util.SimpleLabelLayout>

            <com.mono.util.SimpleLabelLayout
                android:id="@+id/start_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:label="@string/start_date"
                app:labelColor="@color/colorPrimary"
                app:labelSize="14sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/start_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input"
                        android:focusable="false"
                        android:hint="@string/start_date"
                        android:inputType="date"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/start_time"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/input"
                        android:focusable="false"
                        android:gravity="end"
                        android:hint="@string/start_time"
                        android:inputType="time"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textSize="16sp"/>
                </LinearLayout>
            </com.mono.util.SimpleLabelLayout>

            <com.mono.util.SimpleLabelLayout
                android:id="@+id/end_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:label="@string/end_date"
                app:labelColor="@color/colorPrimary"
                app:labelSize="14sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/end_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input"
                        android:focusable="false"
                        android:hint="@string/end_date"
                        android:inputType="date"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/end_time"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/input"
                        android:focusable="false"
                        android:gravity="end"
                        android:hint="@string/end_time"
                        android:inputType="time"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textSize="16sp"/>
                </LinearLayout>
            </com.mono.util.SimpleLabelLayout>

            <com.mono.util.SimpleLabelLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:label="@string/location"
                app:labelColor="@color/colorPrimary"
                app:labelSize="14sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input"
                        android:hint="@string/location"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/location_picker"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_map_white"
                        android:tint="@color/brown"/>
                </LinearLayout>
            </com.mono.util.SimpleLabelLayout>

            <com.mono.util.SimpleLabelLayout
                android:id="@+id/notes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:label="@string/notes"
                app:labelColor="@color/colorPrimary"
                app:labelSize="14sp">

                <EditText
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/input"
                    android:gravity="top"
                    android:hint="@string/notes"
                    android:lines="5"
                    android:padding="6dp"
                    android:textSize="16sp"/>
            </com.mono.util.SimpleLabelLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
